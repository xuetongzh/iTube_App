<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:text="Video URL:"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_url"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_layout"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:text="PLAY"
        app:layout_constraintEnd_toEndOf="@+id/edit_url"
        app:layout_constraintStart_toStartOf="@+id/edit_url"
        app:layout_constraintTop_toBottomOf="@+id/edit_url" />

    <Button
        android:id="@+id/btn_addToList"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="ADD TO PLAYLIST"
        app:layout_constraintEnd_toEndOf="@+id/edit_url"
        app:layout_constraintStart_toStartOf="@+id/edit_url"
        app:layout_constraintTop_toBottomOf="@+id/btn_play" />

    <Button
        android:id="@+id/btn_playList"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="MY PLAYLIST"
        app:layout_constraintEnd_toEndOf="@+id/edit_url"
        app:layout_constraintStart_toStartOf="@+id/edit_url"
        app:layout_constraintTop_toBottomOf="@+id/btn_addToList" />
</androidx.constraintlayout.widget.ConstraintLayout>