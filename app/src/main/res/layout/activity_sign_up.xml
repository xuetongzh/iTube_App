<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SignUpActivity">


    <EditText
        android:id="@+id/edit_full_name_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edit_layout"
        android:hint="username"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_username_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_layout"
        android:hint="username"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_full_name_login"
        app:layout_constraintStart_toStartOf="@+id/edit_full_name_login"
        app:layout_constraintTop_toBottomOf="@+id/edit_full_name_login" />

    <EditText
        android:id="@+id/edit_password_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_layout"
        android:hint="password"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_username_login"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/edit_username_login"
        app:layout_constraintTop_toBottomOf="@+id/edit_username_login" />

    <EditText
        android:id="@+id/edit_confirm_password_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_layout"
        android:hint="confirm password"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_password_login"
        app:layout_constraintStart_toStartOf="@+id/edit_password_login"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_login" />


    <Button
        android:id="@+id/btn_create_account_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_layout"
        android:text="CREATE ACCOUNT"
        app:layout_constraintEnd_toEndOf="@+id/edit_confirm_password_login"
        app:layout_constraintStart_toStartOf="@+id/edit_confirm_password_login"
        app:layout_constraintTop_toBottomOf="@+id/edit_confirm_password_login" />
</androidx.constraintlayout.widget.ConstraintLayout>